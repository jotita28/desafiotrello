<p id="notice"><%= notice %></p>

<h1 class="text-center">YAPOH</h1>
<br>
<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Price</th>
      <th>User</th>
      <th>Address</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td>$ <%= product.price %></td>
        <td><%= link_to product.user.name , '#', class: 'btn btn-warning'%></td>
        <td><%= product.address%></td>
        <% if user_signed_in? %>
          <% if product.user == current_user %>
        <td><%= link_to 'Show', product, class: 'btn btn-primary' %></td>
        <td><%= link_to 'Edit', edit_product_path(product), class: 'btn btn-info'%></td>
        <td><%= link_to 'Destroy', product, method: :delete, class: 'btn btn-danger', data: { confirm: 'Are you sure?' } %></td>
          <% else %>
        <td><%= link_to 'Comprar', product, class: 'btn btn-success' %></td>
        <%end%>
        <%end%>
      </tr>
    <% end %>
  </tbody>
</table>


